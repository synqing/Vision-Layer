{
  "bind_port": 8876,
  "watch_defaults": {
    "fps": 2,
    "mode": "jsonseq"
  },
  "emit": {
    "mode": "webhook",
    "webhook_url": null,
    "min_confidence": 0.97,
    "min_interval_ms": 3000,
    "critical_fields": ["ci/status", "pr/mergeable"]
  },
  "confidence": {
    "field_floor": 0.6,
    "ax_bonus": 0.08,
    "dom_bonus": 0.1,
    "ocr_penalty": 0.1
  },
  "voting": {
    "max_passes": 3,
    "disagreement_trigger": 0.92
  },
  "playwright": {
    "enabled": true,
    "browser": "chromium",
    "context_timeout_ms": 5000
  },
  "limits": {
    "max_failed_names": 8,
    "max_labels": 16,
    "max_items_per_list": 12
  }
}
