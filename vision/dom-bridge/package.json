{
  "name": "dom-bridge",
  "version": "1.0.0",
  "description": "Local DOM co-sensor for Vision layer (Playwright persistent context)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "bootstrap": "npm ci && npx playwright install chromium",
    "start": "node server.js",
    "login": "node login.js",
    "health": "node -e \"fetch('http://127.0.0.1:'+(process.env.DOM_BRIDGE_PORT||4321)+'/healthz').then(r=>r.text()).then(console.log)\""
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "morgan": "^1.10.0",
    "playwright": "^1.49.0"
  }
}
